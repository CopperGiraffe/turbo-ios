{
  "settings": {
    "enable_feature_x": true
  },
  "rules": [
    {
      "patterns": [
        "/new$",
        "/edit$",
        "/signin$",
        "/strada-form$"
      ],
      "properties": {
        "context": "modal"
      }
    },
    {
      "patterns": [
        "/numbers$"
      ],
      "properties": {
        "view_controller": "numbers"
      }
    },
    {
      "patterns": [
        "/numbers/[0-9]+$"
      ],
      "properties": {
        "view_controller": "numbers_detail",
        "context": "modal"
      }
    },
    {
      "patterns": [
        "^/$"
      ],
      "properties": {
        "presentation": "replace_root"
      }
    },
  ]
}
